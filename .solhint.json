{
    "extends": "solhint:recommended",
    "rules": {
        "compiler-version": [
            "error",
            "^0.7.0"
        ],
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "not-rely-on-time": "off",
        "reason-string": ["warn", { "maxLength": 64 }]
    },
    "plugins": [
        "prettier"
    ]
}
