    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.0.8",
    "ganache-cli": "^6.12.2",
    "mocha": "^8.2.1",
    "solc-0.7": "npm:solc@^0.7.6",
    "solhint": "^3.3.2",
    "solidity-docgen": "^0.5.11",
    "truffle": "^5.1.64",
    "truffle-contract-size": "^2.0.1",
